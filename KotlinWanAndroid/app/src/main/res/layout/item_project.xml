<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/qb_px_4"
    android:background="@drawable/article_bg">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/qb_px_10"
        android:ellipsize="middle"
        android:lineSpacingExtra="@dimen/qb_px_8"
        android:maxEms="15"
        android:text="这是标题这是标题这是标题这是标题这是标题这是标题这是标题这这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题是标题"
        android:textColor="#333"
        android:textSize="@dimen/qb_px_15" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:lineSpacingExtra="@dimen/qb_px_8"
        android:layout_margin="@dimen/qb_px_10"
        android:text="项目描述：这里是描述大约有三行"
        android:textColor="#333"
        android:textSize="@dimen/qb_px_15" />

    <TextView
        android:id="@+id/tv_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_description"
        android:layout_marginBottom="@dimen/qb_px_10"
        android:layout_marginRight="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_15"
        android:text="2018-9-27" />


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/qb_px_17"
        android:layout_height="@dimen/qb_px_17"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/tv_publish_time"
        android:layout_marginLeft="@dimen/qb_px_10"
        android:src="@mipmap/android_icon" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_publish_time"
        android:layout_marginLeft="@dimen/qb_px_7"
        android:layout_toRightOf="@id/iv_icon"
        android:text="作者：鸿洋" />

</RelativeLayout>