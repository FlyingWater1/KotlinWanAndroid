<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_60"
        android:text="玩 Android 客户端"
        android:textColor="#333"
        android:textSize="@dimen/qb_px_30" />

    <ImageView
        android:layout_width="@dimen/qb_px_100"
        android:layout_height="@dimen/qb_px_100"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/qb_px_20"
        android:src="@mipmap/android_icon" />

    <LinearLayout style="@style/style_login_linearLayout">

        <TextView
            style="@style/style_login_textView"
            android:text="用户名：" />

        <EditText
            android:id="@+id/et_username"
            android:hint="请输入用户名"
            style="@style/style_login_editText" />

    </LinearLayout>

    <LinearLayout style="@style/style_login_linearLayout">

        <TextView
            style="@style/style_login_textView"
            android:text="密    码：" />

        <EditText
            android:id="@+id/et_password"
            style="@style/style_login_editText"
            android:hint="请输入密码" />

    </LinearLayout>

    <LinearLayout style="@style/style_login_linearLayout">

        <TextView
            style="@style/style_login_textView"
            android:text="确认密码：" />

        <EditText
            android:id="@+id/et_repassword"
            style="@style/style_login_editText"
            android:hint="请再次输入密码" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_40"
        android:layout_marginLeft="@dimen/qb_px_30"
        android:layout_marginRight="@dimen/qb_px_30"
        android:layout_marginTop="@dimen/qb_px_30"
        android:background="@drawable/bg_search_edittext"
        android:text="注册"
        android:textColor="#333"
        android:textSize="@dimen/qb_px_18" />



</LinearLayout>