<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_login_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/qb_px_20</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/qb_px_25</item>
        <item name="android:paddingRight">@dimen/qb_px_25</item>
    </style>

    <style name="style_login_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/qb_px_20</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="style_login_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
